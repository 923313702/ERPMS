
@{
    Layout = null;
}
<div style="padding:5px 10px;">
    <div>
        <a href="#" class="easyui-linkbutton" plain="true" id="orderAdvance_add"><i class="fa fa-plus-square fa-lg"></i>&nbsp;新增</a>
        <a href="#" class="easyui-linkbutton" plain="true" id="orderAdvance_edit"><i class="fa fa-pencil-square fa-lg"></i>&nbsp;修改</a>
        <a href="#" class="easyui-linkbutton" plain="true" id="orderAdvance_remove"><i class="fa fa-trash fa-lg"></i>&nbsp;删除</a>
        <a href="#" class="easyui-linkbutton" plain="true" id="orderAdvance_save"><i class="fa fa-save fa-lg"></i>&nbsp;保存</a>
        <a href="#" class="easyui-linkbutton" plain="true" id="orderAdvance_auditor" flag=""><i class="fa fa-lock  fa-lg"></i>&nbsp;审核</a>
        <a href="#" class="easyui-linkbutton" plain="true" id="orderAdvance_unauditor"><i class="fa fa-unlock fa-lg"></i>&nbsp;撤审</a>
        <a href="#" class="easyui-linkbutton" plain="true" id="orderAdvance_pre"><i class="fa fa-step-backward fa-lg"></i>&nbsp;前翻</a>
        <a href="#" class="easyui-linkbutton" plain="true" id="orderAdvance_next"><i class="fa fa-step-forward fa-lg"></i>&nbsp;后翻</a>
        <a href="#" class="easyui-linkbutton" plain="true"> <i class="fa fa-print fa-lg"></i>&nbsp;打印</a>
        @*<a href="#" class="easyui-linkbutton" plain="true" ><i class="fa fa-refresh fa-lg"></i>&nbsp;刷新</a>*@

        <input type="hidden" id="orderAdvance_page" value="0" readonly />
        <input type="hidden" id="orderAdvance_total" value="-1" readonly />
    </div>
    <div style="height:10px;"></div>
    <div class="column"><span class="current">预收款凭单</span> &nbsp;&nbsp;<span id="orderAdvance_number_text" style="color:red;"></span></div>
    <form id="orderAdvance_form">
        <table class="kv-table">
            <tbody>
                <tr>
                    <td class="kv-label">客户名称</td>
                    <td class="kv-content" colspan="5">
                        <input type="hidden"  name="单号" id="orderAdvance_number"/>
 
                        <input class="easyui-combobox"  style="min-width:350px;" id="orderAdvance_customerNo" required name="客户编码"/>
                    </td>
                    <td class="kv-label">订单号</td>
                    <td class="kv-content"><input class="easyui-combobox" id="orderAdvance_orderNo" name="订单号" required /></td>
                </tr>
                <tr>
                    <td class="kv-label">印品名称</td>
                    <td class="kv-content"><input class="easyui-textbox" name="订单名称" /></td>
                    <td class="kv-label">联系方式</td>
                    <td class="kv-content" ><input class="easyui-textbox" name="送货联系方式"/></td>
                    <td class="kv-label">提货方式</td>
                    <td class="kv-content"><input class="easyui-combobox"  data-options=" valueField: 'Id', textField: 'Key',panelHeight:100,data: [{ Id: '第三方', Key: '第三方' }]" /></td>
                    <td class="kv-label">业务员</td>
                    <td class="kv-content"><input class="easyui-combobox" name="业务员编码" id="orderAdvance_saleMan"/></td>

                </tr>
                <tr>
                    <td class="kv-label">成品数量</td>
                    <td class="kv-content" ><input class="easyui-numberbox" name="成品数量" required /></td>
                    <td class="kv-label">计量单位</td>
                    <td class="kv-content"><input class="easyui-combobox" name="计量单位" id="orderAdvance_unit" /></td>
                    <td class="kv-label">成品尺寸</td>
                    <td class="kv-content"><input class="easyui-textbox" name="成品尺寸" /></td>
                    <td class="kv-label">交货日期</td>
                    <td class="kv-content"><input class="easyui-datebox"  name="交货日期"/></td>
                </tr>
                <tr>
                    <td class="kv-label">结款方式</td>
                    <td class="kv-content"><input class="easyui-combobox" name="结款方式" data-options="valueField: 'Id', textField: 'Key',panelHeight:100,data: [{ Id: '月结', Key: '月结' },{ Id: '现结', Key: '现结' },{ Id: '提货现结', Key: '提货现结'}]"/></td>
                    <td class="kv-label">预收金额</td>
                    <td class="kv-content"><input class="easyui-numberbox" name="预收金额" /></td>
                    <td class="kv-label">订单金额</td>
                    <td class="kv-content"><input class="easyui-numberbox" name="金额"/></td>
                    <td class="kv-label">应收金额</td>
                    <td class="kv-content"><input class="easyui-numberbox" name="应收金额"/></td>
                </tr>
                <tr>
                    <td class="kv-label" >备注说明</td>
                    <td class="kv-content"  colspan="7"><input class="easyui-textbox" name="提货说明" style="min-width:750px;" /></td>
                   
                </tr>
               
                <tr>
                    <td class="kv-label">制单人</td>
                    <td class="kv-content"><input class="easyui-combobox" name="制单人编码" id="orderAdvance_zhidan" readonly ></td>
                    <td class="kv-label">制单日期</td>
                    <td class="kv-content"><input class="easyui-datebox" name="制单日期" required></td>
                    <td class="kv-label">审核人</td>
                    <td class="kv-content"><input class="easyui-combobox" id="orderAdvance_auditorNo" name="审核人编码" readonly/></td>
                    <td class="kv-label">审核日期</td>
                    <td class="kv-content"><input class="easyui-datebox" name="审核日期" readonly id="orderAdvance_auditorTime" /></td>
                </tr>
            </tbody>
        </table>
    </form>
</div>
<script>
    erpRequire(['order/order_advance'])
</script>