
@{
    Layout = null;
}

<style>
    #orderPriceList_form .combo, #orderPriceList_form .datebox, #orderPriceList_form .textbox {
        width: 120px !important;
    }
</style>

<div style="padding:5px 10px;height:88%;">
    <div>
        <a href="#" class="easyui-linkbutton" plain="true" id="orderPriceList_search"> <i class="fa fa-search fa-lg"></i>&nbsp;查找</a>
        @*<a href="#" class="easyui-linkbutton" plain="true" id="orderPriceList_refresh" ><i class="fa fa-refresh fa-lg"></i>&nbsp;刷新</a>*@
        <a href="#" class="easyui-linkbutton" plain="true"> <i class="fa fa-print fa-lg"></i>&nbsp;打印</a>
        <a href="#" class="easyui-linkbutton" plain="true" id="orderPriceList_excel"> <i class="fa fa-file-excel-o fa-lg"></i>&nbsp;excel</a>
    </div>
    <div class="column"><span class="current">业务计价单清单</span></div>
    <div id="orderPriceList_datagrid"> </div>
    <div id="orderPriceList_dialog" class="easyui-dialog" title="查询条件" data-options="modal:true,closed:true,toolbar:'#opldlg-buttons'" style="width:750px;height:250px;padding:10px;">
        <form id="orderPriceList_form">
            <table class="kv-table">
                <tbody>
                    <tr>
                        <td class="kv-label">订单号</td>
                        <td class="kv-content"><input class="easyui-combobox" name="orderNo" id="orderPriceList_orderNo"/></td>
                        <td class="kv-label">订单名称</td>
                        <td class="kv-content"><input class="easyui-textbox" name="orderName" /></td>
                        <td class="kv-label">业务员</td>
                        <td class="kv-content"><input class="easyui-combobox" name="saleMan" id="orderPriceList_saleMan" /></td>
                    </tr>
                    <tr>
                        <td class="kv-label">客户名称</td>
                        <td class="kv-content"><input class="easyui-combobox" name="customerNo" id="orderPriceList_customerNo"/></td>
                        <td class="kv-label">印品类别</td>
                        <td class="kv-content"><input class="easyui-combobox" name="printCategory" id="orderPriceList_printCategory"/></td>
                        <td class="kv-label">说明</td>
                        <td class="kv-content"><input class="easyui-textbox" name="remark" /></td>
                    </tr>
                    <tr>
                        <td class="kv-label" colspan="2">制单开始日期</td>
                        <td class="kv-content"><input class="easyui-datebox" name="zhidanStart" /></td>
                        <td class="kv-label" colspan="2">制单结束日期</td>
                        <td class="kv-content"><input class="easyui-datebox" name="zhidanEnd" /></td>
                    </tr>
                    <tr>
                        <td class="kv-label" colspan="2">交货开始日期</td>
                        <td class="kv-content"><input class="easyui-datebox" name="deliveryStart" /></td>
                        <td class="kv-label" colspan="2">交货截止日期</td>
                        <td class="kv-content"><input class="easyui-datebox" name="deliveryEnd" /></td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
    <div id="opldlg-buttons">
        <table cellpadding="0" cellspacing="0" style="width:100%">
            <tr>
                <td>
                    <a href="#" class="easyui-linkbutton" plain="true" id="orderPriceList_go"><i class="fa fa-check fa-lg" ></i>&nbsp;确定</a>
                    <a href="#" class="easyui-linkbutton" plain="true" id="orderPriceList_cancel"><i class="fa fa-times fa-lg" ></i>&nbsp;取消</a>
                </td>
            </tr>
        </table>
    </div>
</div>

<script>
    erpRequire(['order/orderPriceList'])
</script>